<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <div>
          <h4>Title</h4>
          <%= f.text_field :title%>

          <h4>Option</h4>
          <%= f.text_area :body%>
        </div>

          <%= f.submit "Update Book" %>
      <% end %>


      <P><%= link_to "Show" , book_path(@book.id) %>
         |
         <%= link_to "Back" , books_path %>
      </P>
    </div>
  </div>
</div>



