<div class="books col-md-8 offset-md-1">
    <h3>Books</h3>
    <table class="table">

      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>
      <tbody>
        <% books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user) do %>
              <%= image_tag user.get_profile_image(100,100) %>
              <% end %>
          </td>

          <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
    　　<% end %>
      </tbody>
    </table>
  </div>
