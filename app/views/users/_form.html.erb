




      <h3 class="info-title mt-3">New book</h3>

 <div class="new-book">

      <%= form_with model: book do |f| %>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>


      <div class="field">
        <%= f.label :Opinion %>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn-success" %>
      </div>

      <% end %>

    </div>
